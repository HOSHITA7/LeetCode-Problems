class Solution {

    public boolean threeConsecutiveOdds(int[] arr) {

        int c = 0; int n = arr.length;

        for (int i = 0; i < n; i++) {

             if (arr[i] % 2 != 0) {
                  
                c++;

                if (c == 3)  return true;
            }

             else  c = 0;
        }

        return false;
    }
}
